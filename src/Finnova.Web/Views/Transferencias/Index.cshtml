@model IEnumerable<Finnova.Core.Models.Transferencia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTransferencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContaOrigem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContaDestino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTransferencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContaOrigem.NomeConta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContaDestino.NomeConta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTransferencia">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTransferencia">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTransferencia">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
